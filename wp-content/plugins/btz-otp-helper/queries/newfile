SELECT main.ID, main.post_title, main.term_taxonomy_id, main.taxonomy, main.name, ptr.object_id as ID_prev, ntr.object_id as ID_next, pp.post_title as title_prev, pp.guid as guid_prev, np.post_title as title_next, np.guid as guid_next
FROM
(
SELECT p.ID, p.post_title, p.guid, tr.term_taxonomy_id, tt.term_id, tt.taxonomy, t.name, tr.otp_order,
 ( SELECT max(ptr.otp_order) from wp_term_relationships as ptr WHERE ptr.otp_order < tr.otp_order ) as order_prev,
 ( SELECT min(ntr.otp_order) from wp_term_relationships as ntr WHERE ntr.otp_order > tr.otp_order ) as order_next
                 FROM wp_term_relationships AS tr INNER JOIN wp_posts p ON p.ID = tr.object_id
                 
                 INNER JOIN wp_term_taxonomy AS tt ON tt.term_taxonomy_id = tr.term_taxonomy_id
                 INNER JOIN wp_terms AS t ON t.term_id = tt.term_id
                 WHERE p.post_title <> '' AND tt.taxonomy <> 'nav_menu'
		 ORDER BY tr.term_taxonomy_id ASC, tr.otp_order ASC
) as main
LEFT OUTER JOIN wp_term_relationships AS ptr ON ptr.term_taxonomy_id = main.term_taxonomy_id AND ptr.otp_order = main.order_prev
LEFT OUTER JOIN wp_term_relationships AS ntr ON ntr.term_taxonomy_id = main.term_taxonomy_id AND ntr.otp_order = main.order_next
LEFT OUTER JOIN wp_posts AS pp ON ptr.object_id = pp.ID
LEFT OUTER JOIN wp_posts AS np ON ntr.object_id = np.ID


